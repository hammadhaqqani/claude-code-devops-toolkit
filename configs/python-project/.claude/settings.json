{
  "claude": {
    "version": "1.0.0",
    "projectType": "python",
    "settings": {
      "defaultModel": "claude-3-5-sonnet-20241022",
      "maxTokens": 8192,
      "temperature": 0.3,
      "contextFiles": [
        "CLAUDE.md",
        "*.py",
        "requirements.txt",
        "pyproject.toml",
        "setup.py"
      ],
      "ignorePatterns": [
        "__pycache__/**",
        "*.pyc",
        "*.pyo",
        ".pytest_cache/**",
        "venv/**",
        ".venv/**"
      ],
      "codeStyle": {
        "formatter": "black",
        "linter": "flake8",
        "typeChecker": "mypy",
        "validateBeforeSuggest": true,
        "preferTypeHints": true,
        "useDocstrings": true,
        "docstringStyle": "google"
      },
      "suggestions": {
        "enableCodeGeneration": true,
        "enableRefactoring": true,
        "enableTestGeneration": true,
        "enableDocstringGeneration": true,
        "suggestTypeHints": true,
        "suggestErrorHandling": true
      },
      "security": {
        "checkDependencies": true,
        "validateSecrets": true,
        "checkInputValidation": true,
        "suggestSecurityBestPractices": true
      },
      "workflows": {
        "preCommit": {
          "runBlack": true,
          "runFlake8": true,
          "runMypy": false,
          "runPytest": false
        },
        "onSave": {
          "format": true,
          "lint": false,
          "typeCheck": false
        }
      }
    },
    "prompts": {
      "defaultPrompt": "prompts/iac-generation.md",
      "securityReview": "prompts/security-review.md",
      "debugging": "prompts/debugging.md"
    },
    "integrations": {
      "python": {
        "version": ">= 3.10",
        "virtualEnvironment": true,
        "packageManager": "pip"
      },
      "testing": {
        "framework": "pytest",
        "coverage": true,
        "targetCoverage": 80
      },
      "tools": {
        "black": {
          "lineLength": 100,
          "enabled": true
        },
        "flake8": {
          "maxLineLength": 100,
          "enabled": true
        },
        "mypy": {
          "strict": false,
          "enabled": true
        }
      }
    }
  }
}
