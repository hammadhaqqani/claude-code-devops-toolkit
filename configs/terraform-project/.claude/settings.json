{
  "claude": {
    "version": "1.0.0",
    "projectType": "terraform",
    "settings": {
      "defaultModel": "claude-3-5-sonnet-20241022",
      "maxTokens": 8192,
      "temperature": 0.2,
      "contextFiles": [
        "CLAUDE.md",
        "*.tf",
        "*.tfvars"
      ],
      "ignorePatterns": [
        ".terraform/**",
        "*.tfstate",
        "*.tfstate.backup",
        ".terraform.lock.hcl"
      ],
      "codeStyle": {
        "formatter": "terraform fmt",
        "validateBeforeSuggest": true,
        "preferModules": true,
        "useVariables": true
      },
      "suggestions": {
        "enableIaCGeneration": true,
        "enableSecurityReview": true,
        "enableBestPractices": true,
        "suggestTags": true,
        "suggestOutputs": true
      },
      "security": {
        "checkSecrets": true,
        "validateIAM": true,
        "checkPublicAccess": true,
        "suggestEncryption": true
      },
      "workflows": {
        "preCommit": {
          "runTerraformFmt": true,
          "runTerraformValidate": true,
          "runTfsec": false
        },
        "onSave": {
          "format": true,
          "validate": false
        }
      }
    },
    "prompts": {
      "defaultPrompt": "prompts/iac-generation.md",
      "securityReview": "prompts/security-review.md",
      "debugging": "prompts/debugging.md"
    },
    "integrations": {
      "terraform": {
        "version": ">= 1.5.0",
        "backend": "s3",
        "workspaces": true
      },
      "providers": {
        "aws": {
          "version": "~> 5.0",
          "region": "us-east-1"
        }
      }
    }
  }
}
